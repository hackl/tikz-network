  % \DTLloaddb[noheader=false]{#1}{#1}
  % Define variables to store option values
  \def\edge@Options{}%
  \def\edge@u{}%
  \def\edge@v{}%
  \def\edge@u@layer{}%
  \def\edge@v@layer{}%
  \def\edge@rgbValues{}%
  \def\u@layer{}%
  \def\v@layer{}%
  %
  % Assign where the edges are drawn from to
  \ifthenelse{\not\equal{\cmdNW@edges@layer}{}}{
